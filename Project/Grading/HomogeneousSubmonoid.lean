lemma exists_factorisation_of_elemIsRelevant_aux
    [AddGroup.FG Œπ] (a : A) (ha : SetLike.Homogeneous ùíú a) (a_rel : ElemIsRelevant a ha) :
    ‚àÉ (x : Œπ ‚Üí‚ÇÄ A), (‚àÄ i ‚àà x.support, x i ‚àà ùíú i) ‚àß
      AddSubgroup.closure x.support = Œπ[(closure {a} (by simpa)).bar] ‚àß
      (‚àÉ k : ‚Ñï, (‚àè i ‚àà x.support, x i) ‚à£ a ^ k) := by
  rw [ElemIsRelevant, isRelevant_iff_finiteIndex_of_FG] at a_rel
  haveI fg : AddGroup.FG Œπ[(closure {a} (by simpa)).bar] := by
    set H : AddSubgroup Œπ := Œπ[(closure {a} (by simpa)).bar]
    exact AddSubgroup.fg_of_index_ne_zero (H := H)
  obtain ‚ü®s, hs1, hs2‚ü© :=
    AddGroup.exists_finite_generating_set_of_FG' _
    (closure (ùíú := ùíú) {a} (by simpa)).bar.deg fg
  have hs3 : ‚àÄ i : s, ‚àÉ (y : A), y ‚â† 0 ‚àß y ‚àà ùíú i ‚àß
      (‚àÉ (n : ‚Ñï), y ‚à£ a^n) := by
    rintro ‚ü®i, hi‚ü©
    specialize hs1 hi
    simp only [deg, bar, Submonoid.mem_mk, Subsemigroup.mem_mk, Set.mem_setOf_eq, ne_eq] at hs1
    obtain ‚ü®y, ‚ü®‚ü®_, ‚ü®z, hz1, hz2‚ü©‚ü©, hy2, hy1‚ü©‚ü© := hs1
    rw [mem_closure_singleton (ha := ha)] at hz1
    obtain ‚ü®n, rfl‚ü© := hz1
    exact ‚ü®y, hy2, hy1, n, hz2‚ü©

  choose y y_ne_zero y_mem y_dvd using hs3
  choose n y_dvd using y_dvd
  let x : Œπ ‚Üí‚ÇÄ A :=
    Finsupp.onFinset s (fun i ‚Ü¶ if h : i ‚àà s then y ‚ü®i, h‚ü© else 0) <| by
      intro i hi
      simp only [ne_eq, dite_eq_right_iff, not_forall] at hi
      exact hi.choose
  refine ‚ü®x, ?_, ?_, ?_‚ü©
  ¬∑ intro i hi
    simp only [Finsupp.mem_support_iff, Finsupp.onFinset_apply, ne_eq, dite_eq_right_iff,
      not_forall, x] at hi
    obtain ‚ü®h1, h2‚ü© := hi
    simp only [Finsupp.onFinset_apply, dif_pos h1, x]
    exact y_mem ‚ü®i, h1‚ü©
  ¬∑ refine Eq.trans (le_antisymm ?_ ?_) hs2
    ¬∑ refine AddSubgroup.closure_mono fun i hi ‚Ü¶ ?_
      simp only [Finset.mem_coe, Finsupp.mem_support_iff, Finsupp.onFinset_apply, ne_eq,
        dite_eq_right_iff, not_forall, x] at hi
      exact hi.choose
    ¬∑ rw [AddSubgroup.closure_le]
      intro i hi
      refine AddSubgroup.subset_closure ?_
      simp only [Finset.mem_coe, Finsupp.mem_support_iff, Finsupp.onFinset_apply, ne_eq,
        dite_eq_right_iff, not_forall, x]
      refine ‚ü®hi, y_ne_zero ‚ü®_, hi‚ü©‚ü©

  have le : x.support ‚â§ s := by
    intro i hi
    simp only [Finsupp.mem_support_iff, Finsupp.onFinset_apply, ne_eq, dite_eq_right_iff,
      not_forall, x] at hi
    exact hi.choose
  refine ‚ü®‚àë i ‚àà x.support.attach, n ‚ü®i.1, le i.2‚ü©, ?_‚ü©
  rw [‚Üê Finset.prod_attach, ‚Üê Finset.prod_pow_eq_pow_sum]
  apply Finset.prod_dvd_prod_of_dvd
  rintro ‚ü®i, hi‚ü© -
  simp only [Finsupp.mem_support_iff, Finsupp.onFinset_apply, ne_eq, dite_eq_right_iff, not_forall,
    x] at hi
  obtain ‚ü®hx1, hx2‚ü© := hi
  simp only [Finsupp.onFinset_apply, dif_pos hx1, x]
  apply y_dvd ‚ü®_, _‚ü©

lemma exists_factorisation_of_elemIsRelevant [Nontrivial A]
    [AddGroup.FG Œπ] (a : A) (ha : SetLike.Homogeneous ùíú a) (a_rel : ElemIsRelevant a ha) :
    ‚àÉ (n : ‚Ñï) (x : Fin n ‚Üí A) (d : Fin n ‚Üí Œπ) (x_ne_zero : ‚àÄ i, x i ‚â† 0)
      (mem : ‚àÄ (i : Fin n), x i ‚àà ùíú (d i)),
      (AddSubgroup.closure (Set.range d)).FiniteIndex ‚àß
      (‚àÉ (k : ‚Ñï), ‚àè i : Fin n, x i = a ^ k) := by
  classical
  -- a is relevant iff M[‚ü®a‚ü©.bar] is of finite index
  rw [ElemIsRelevant, isRelevant_iff_finiteIndex_of_FG] at a_rel
  -- M[‚ü®a‚ü©.bar] is finitely generated
  haveI fg : AddGroup.FG Œπ[(closure {a} (by simpa)).bar] := by
    set H : AddSubgroup Œπ := Œπ[(closure {a} (by simpa)).bar]
    exact AddSubgroup.fg_of_index_ne_zero (H := H)
  -- let s be a subset of ‚ü®a‚ü©.bar such that s generates M[‚ü®a‚ü©.bar]
  obtain ‚ü®s, hs1, hs2‚ü© :=
    AddGroup.exists_finite_generating_set_of_FG' _
    (closure (ùíú := ùíú) {a} (by simpa)).bar.deg fg
  -- then since a is relevant, for every i ‚àà s, there exists some y ‚àà A such that
  -- y ‚â† 0 and y ‚àà A·µ¢ and there exists some n such that y divides a^n
  have hs3 : ‚àÄ i : s, ‚àÉ (y : A), y ‚â† 0 ‚àß y ‚àà ùíú i ‚àß
      (‚àÉ (n : ‚Ñï), y ‚à£ a^n) := by
    rintro ‚ü®i, hi‚ü©
    specialize hs1 hi
    simp only [deg, bar, Submonoid.mem_mk, Subsemigroup.mem_mk, Set.mem_setOf_eq, ne_eq] at hs1
    obtain ‚ü®y, ‚ü®‚ü®_, ‚ü®z, hz1, hz2‚ü©‚ü©, hy2, hy1‚ü©‚ü© := hs1
    rw [mem_closure_singleton (ha := ha)] at hz1
    obtain ‚ü®n, rfl‚ü© := hz1
    exact ‚ü®y, hy2, hy1, n, hz2‚ü©

  choose y y_ne_zero y_mem y_dvd using hs3
  choose n y_dvd using y_dvd
  -- note that y : s ‚Üí A is an injective function (you can only get this if you include non-zero
  -- assumption in the definition of deg, but I don't think the injectivity is very useful here)
  have y_inj : Function.Injective y := by
    intro a b h
    have ha := y_mem a
    have hb := y_mem b
    rw [h] at ha
    have := DirectSum.degree_eq_of_mem_mem ùíú ha hb (y_ne_zero b)
    ext
    assumption
  -- let N be the number of elements in s and we write s as {y_1, ..., y_N}
  let N : ‚Ñï := s.card
  -- we write {d_1, ..., d_N} be the degrees of y_i
  let d : Fin N ‚Üí Œπ := Subtype.val ‚àò (Finset.equivFin s).symm
  -- I blundered here, but because I already use y as a function, I can't use the same name
  -- so x is actually the sequence y_1, ..., y_N
  let x : Fin N ‚Üí A := y ‚àò (Finset.equivFin s).symm
  have x_inj : Function.Injective x := by
    refine Function.Injective.comp y_inj s.equivFin.symm.injective
  -- we write k_1, ..., k_N to be the natural numbers that y_i | a^k·µ¢
  let k : Fin N ‚Üí ‚Ñï := n ‚àò (Finset.equivFin s).symm
  -- let K be the sum of k_i
  let K : ‚Ñï := ‚àë i : Fin N, k i
  -- then y_1 y_2 ... y_N divides a^K
  have dvd : (‚àè i : Fin N, x i) ‚à£ a ^ K := by
    rw [‚Üê Finset.prod_pow_eq_pow_sum]
    apply Finset.prod_dvd_prod_of_dvd
    rintro ‚ü®i, hi‚ü© -
    apply y_dvd

  -- then there exists a homogeneous b such that y_1 y_2 ... y_N b = a^K where b ‚àà A‚±º
  obtain ‚ü®b, hb, ‚ü®j, hj‚ü©‚ü© := SetLike.Homogeneous.exists_homogeneous_of_dvd ùíú sorry sorry dvd
  by_cases b_eq_0 : b = 0
  ¬∑
    -- if b = 0, however, this means a^K = 0. It is a bit awkward to choose `n`. The obvious choice
    -- is n = 0, but this won't work because the span of empty set is {0} which may not have finite
    -- index. The only thing we know that have finite index is the span of {d_1, ..., d_N}
    sorry

  -- if b ‚â† 0, then y_1, y_2, ..., y_N, b is a factorisation of a^K where all y_i and b are non-zero
  -- such that d_1, ..., d_N, j together generate a subgroup of finite index
  refine ‚ü®N + 1, Fin.cons b x, Fin.cons j d, ?_, ?_, ?_, ‚ü®K, ?_‚ü©‚ü©
  ¬∑ intro i
    refine Fin.cases ?_ ?_ i
    ¬∑ simpa
    ¬∑ intro i
      simp only [Fin.cons_succ, Function.comp_apply, ne_eq, x, N]
